extends ../layout/common.pug 

block bootstrap
 h1 Register

 if errors
  each error in errors
   .alert.alert-danger= error

 form(method="POST")
  .form-group
    label(for='exampleInputEmail1') Email 
    input#exampleInputEmail1.form-control(type='email' aria-describedby='emailHelp',name ="email",placeholder="Email",value=value ? value.email : "")
  .form-group
    label(for='exampleInputPassword1') Password
    input#exampleInputPassword1.form-control(type='password',name="password",placeholder="Password")
  .form-group
    label(for='exampleInputPassword1') Confirm Password
    input#exampleInputPassword1.form-control(type='password',name="Cpassword",placeholder="Password")
  button.btn.btn-primary(type='submit') Register

