extends ../layout/common.pug 

block bootstrap
 h1 Create User

 if errors
  each error in errors
   .alert.alert-danger= error

 form(action="/users/create", method="POST",class="d-flex")
   input(type="text", name="name", class="input-group-text",placeholder="Name", value=value ? value.name : "")
   input(type="tel", name="phone",pattern="[0-9]{10}", class="input-group-text ml-3",placeholder="phone", value=value ? value.phone : "" )
   button(class="btn btn-primary ml-2 ") Create
 a(href="/",class="btn btn-secondary") Get to index