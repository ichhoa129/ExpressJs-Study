extends ../layout/common.pug 

block bootstrap
 h1 Users

 
 form(action="/users/search" method="GET", class="d-flex")
  input(type="text", name="q",class="input-group-text")
  button(class="btn btn-primary ml-2") Search
  a(href="/users/create",class="btn btn-secondary ml-2") Create New 
  a(href="/",class="btn btn-secondary ml-2") Get to index
 ul 
  each user in users
   li
    span= user.name 
    span &nbsp;
    a(href="/users/view/" + user.id) View

